<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorText</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="inputLabel">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radioLabel">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
    </style>

    <style name="inputText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>